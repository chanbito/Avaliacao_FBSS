@{
    ViewBag.Title = "Medicos";
}

<div class="p-5">
    <div>
        <div class="container">
            <div class="">
                <div class="row">
                    <div class="col-4">
                        <button class="btn btn-sm btn-outline-success novoMedico">Novo Medico</button>
                    </div>

                </div>
                <hr />

                <div class="p-5 rounded shadow-sm" id="divTabela">

                </div>
            </div>
        </div>

    </div>


    <div id="modal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h6 class="modal-title"></h6>
                </div>
                <div class="modal-body">
                    @Html.Hidden("_cpf")
                    <div class="form-group">
                        <label>CPF</label>
                        <input type="text" id="CPF" class="form-control form-control-sm CPF"/>
                        <span class="text-danger erroNome d-none"></span>
                    </div>
                    
                    
                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" class="form-control form-control-sm nome" />
                        <span class="text-danger erroNome d-none"></span>
                    </div>

                    <div class="form-group">
                        <label>CRM</label>
                        <input type="text" class="form-control form-control-sm CRM" />
                        <span class="text-danger erroIdade d-none">CRM</span>
                    </div>

                    <div class="form-group">
                        <label>Especialidade:</label>
                        @*<input type="text" class="form-control form-control-sm profissao" />*@
                        <select id="SelecaoEspecialidade">
                            

                        </select>
                        @*<span class="text-danger erroProfissao d-none">Digite uma profissão</span>*@
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="form-group">
                        <input type="button" value="Salvar" class="btn btn-sm btn-outline-success btnSalvar" />
                        <input type="button" value="Cancelar" class="btn btn-sm btn-light" data-dismiss="modal" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
